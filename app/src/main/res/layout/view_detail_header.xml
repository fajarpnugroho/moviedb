<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_header"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:paddingTop="?actionBarSize"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <ImageView
        android:id="@+id/poster"
        android:layout_width="150dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_toRightOf="@id/poster"
        android:textSize="20sp"
        tools:text="Something about movie" />

    <TextView
        android:id="@+id/rating_average"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@id/poster"
        tools:text="7.7" />

    <RatingBar
        android:id="@+id/rating_bar"
        style="@style/Base.Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_toRightOf="@id/rating_average"
        android:numStars="10" />

    <TextView
        android:id="@+id/synopsis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rating_average"
        android:layout_marginTop="8dp"
        tools:text="Something about movie with long description"
        android:layout_toRightOf="@id/poster"/>

</RelativeLayout>